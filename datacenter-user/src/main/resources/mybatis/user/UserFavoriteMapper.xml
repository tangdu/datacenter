<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xnh.datacenter.user.mapper.UserFavoriteMapper">
  
  
  <!--ResultMap-->
  <resultMap id="BaseResultMap" type="cn.xnh.datacenter.user.model.UserFavoriteDO">
    <id column="id" property="id" />
    <result column="create_time" property="createTime" />
    <result column="update_time" property="updateTime" />
    <result column="create_person" property="createPerson" />
    <result column="update_person" property="updatePerson" />
    <result column="is_delete" property="isDelete" />
    <result column="t_user_id" property="tUserId" />
  </resultMap>
  
  
  <!--基础列-->
  <sql id="Base_Column_List">
    id, create_time, update_time, create_person, update_person, is_delete, t_user_id
  </sql>
  
  
  <!--根据ID删除-->
  <delete id="deleteById" parameterType="java.lang.Long">
    delete from t_user_favorite
    where id = #{id}
  </delete>
  
  
  <!--添加-->
  <insert id="add" parameterType="cn.xnh.datacenter.user.model.UserFavoriteDO">
    <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into t_user_favorite (create_time, update_time, create_person, update_person, is_delete, 
      t_user_id)
    values (#{createTime}, #{updateTime}, #{createPerson}, #{updatePerson}, #{isDelete}, 
      #{tUserId})
  </insert>
  
  
  <!--根据ID查询-->
  <select id="queryById" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select  <include refid="Base_Column_List" /> from t_user_favorite
    where id = #{id}
  </select>
  
  
  <!--根据参数分页查询-->
  <select id="queryPage" resultMap="BaseResultMap">
    select  <include refid="Base_Column_List" /> from t_user_favorite
  </select>
  
  
  <!--根据ID更新-->
  <update id="updateById" parameterType="cn.xnh.datacenter.user.model.UserFavoriteDO">
    update t_user_favorite
    set create_time = #{createTime},
      update_time = #{updateTime},
      create_person = #{createPerson},
      update_person = #{updatePerson},
      is_delete = #{isDelete},
      t_user_id = #{tUserId}
    where id = #{id}
  </update>
  
  
  <!--根据ID选择性更新-->
  <update id="updateByParams" parameterType="cn.xnh.datacenter.user.model.UserFavoriteDO">
    update t_user_favorite
    <set>
      <if test="createTime != null">
        create_time = #{createTime},
      </if>
      <if test="updateTime != null">
        update_time = #{updateTime},
      </if>
      <if test="createPerson != null">
        create_person = #{createPerson},
      </if>
      <if test="updatePerson != null">
        update_person = #{updatePerson},
      </if>
      <if test="isDelete != null">
        is_delete = #{isDelete},
      </if>
      <if test="tUserId != null">
        t_user_id = #{tUserId},
      </if>
    </set>
    where id = #{id}
  </update>
  
  
</mapper>